<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <include
        layout="@layout/appbar"
        android:id="@+id/toolbar" />
    <ImageView
        android:id="@+id/back_arrow_images"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_arrow" />
    </LinearLayout>

    <Button
        android:id="@+id/imageProfilesButton"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_centerInParent="true"
        android:background="@drawable/admin_image_home_buttons"
        android:clickable="true"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="Profiles"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/imagePostersButton"
        android:layout_width="250dp"
        android:layout_height="43dp"
        android:layout_below="@id/imageProfilesButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/admin_image_home_buttons"
        android:clickable="true"
        android:fontFamily="@font/frank_ruhl_libre_bold"
        android:text="Posters"
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>
