<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_event_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/edittext_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_title"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edittext_event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_description"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:minHeight="100dp" />

    <EditText
        android:id="@+id/edittext_event_milestone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/milestone_number"
        android:inputType="number" />

    <EditText
        android:id="@+id/edittext_event_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_location"
        android:inputType="text"/>

    <Switch
        android:id="@+id/switch_checkin_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/check_in_qr_code"
        android:checked="true"/>

    <Switch
        android:id="@+id/switch_eventpage_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event_page_qr_code"
        android:checked="true"/>

    <Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next" />

</LinearLayout>
