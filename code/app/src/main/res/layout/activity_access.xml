<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:fontFamily="@font/noto_sans_bold"
        android:text="Admin Access"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <!--Should this be a button or a text field to type the access key? -Aivan-->
    <Button
        android:id="@+id/enterButton"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/access_bttn"
        android:text="@string/access_key"
        />

    <Button
        android:id="@+id/authenticateButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:background="@drawable/regular_bttn"
        android:text="Authenticate"
        android:textColor="@color/light_gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_back_checkin_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="650dp"
        android:clickable="true"
        app:background="@color/dark_green"
        app:backgroundTint="@color/dark_green"
        app:srcCompat="?attr/actionModeCloseDrawable"
        app:tint="@color/white" />

</RelativeLayout>
