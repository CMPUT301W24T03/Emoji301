<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_CheckINQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:background="@color/dark_green"
            app:backgroundTint="@color/dark_green"
            app:srcCompat="?attr/actionModeCloseDrawable"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:fontFamily="@font/belleza"
            android:text="Check In QR Code"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/checkin_qr_iv"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <Button
            android:id="@+id/generate_qr_checkin_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/generate_qr_button"
            android:fontFamily="@font/frank_ruhl_libre_bold"
            android:text="Generate QR"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic_a1_semibold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Event Check In"
            android:textSize="15sp" />

        <Button
            android:id="@+id/share_button_check_in2"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/qr_button_solid"
            android:layout_gravity="center_horizontal"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp" />



    </LinearLayout>

</LinearLayout>