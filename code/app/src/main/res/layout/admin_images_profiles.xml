<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ivory"
    android:orientation="vertical">

    <include
        layout="@layout/appbar"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_arrow_eventdetails"
        android:layout_width="27dp"
        android:layout_height="29dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/frank_ruhl_libre"
            android:text="Sort by: "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/latestButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/arimo"
            android:background="@drawable/admin_image_sortbutton"
            android:text="Latest"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/oldestButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Oldest"
            android:textColor="@color/black"
            android:fontFamily="@font/arimo"
            android:background="@drawable/admin_image_home_buttons"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"/>

    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardElevation="10dp"
            android:id="@+id/postersImage"></androidx.cardview.widget.CardView>



    </LinearLayout>


</LinearLayout>
